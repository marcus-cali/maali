{{!< default}}

<div class="signup-page flex flex-cc" data-image-style="right">
  {{#if @member.paid}}

    {{!-- Logged in, paying member: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>

  {{else if @member}}

    {{!-- Logged in, paying member: Redirect to account page --}}
    <script>window.location = '/account/';</script>
    {{!-- Portal link --}}
    {{!-- <script>window.location = '{{@site.url}}/#/portal/account/';</script> --}}
    
  {{else}}
    <div class="signup-page__content">
      <a href="{{@site.url}}" class="signup-page__brand">
        {{#if @custom.dark_theme_logo}}
          {{> dark-theme-logo
            image_class="lazyload"
          }}
        {{/if}}
        {{#if @site.logo}}
          {{> image
            image_type="site"
            image_class="lazyload"
            image_url=@site.logo
            size_s=true
            sizes="200px"
          }}
        {{else}}
          {{@site.title}}
        {{/if}}
      </a>

      <div class="signup-page__box">
        {{#unless @site.members_invite_only}}
          <h1 class="signup-page__title">{{#page}}{{title}}{{else}}{{t "Sign up"}}{{/page}}</h1>
          <p id="form-input-label" class="opacity-080">{{#page}}{{excerpt}}{{else}}{{t "Sign up to {sitetitle} to get access to premium content." sitetitle=@site.title}}{{/page}}</p>
          
          {{> subscribe-form 
            form_type="signup" 
            form_class=""
            button_class="uppercase btn--brand"
            button_text=(t 'Continue') 
            name_field=true
          }}
        {{else}}
          <p class="text-center text-11 fw-600">{{t "This site is invite-only, contact the owner for access."}}</p>
        {{/unless}}
        <p class="m-0 mt text-center">
          <small>{{t "Already have an account?"}} 
            {{#link href="/signin/"}}{{t "Sign in"}}{{/link}}
          </small>
        </p>
      </div>
    </div>
    {{#page}}
      {{#if feature_image}}
        <figure class="signup-page__media{{#if feature_image_caption}} has-caption{{/if}}">
          {{> image
            picture_class="h-100 w-100"
            image_type="post"
            image_class="lazyload"
            image_url=feature_image
            size_s=true
            size_m=true
            size_l=true
            size_xl=true
            sizes="0px"
          }}
          {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
      {{/if}}
    {{/page}}
  {{/if}}
</div>