{
  "name": "maali",
  "description": "Maali Ghost Theme",
  "demo": "https://maali.brightthemes.com",
  "version": "1.6.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "News",
      "Magazine",
      "Publication"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bironthemes/maali-ghost.git"
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "test": "gscan .",
    "zip": "gscan . --verbose && gulp build && mkdir -p dist && zip -r dist/${npm_package_name} . -x 'dist*' -x 'demo*' -x 'node_modules*' -x '.*'",
    "release": "npm version minor --no-git-tag-version && git add . && git commit -m \"v$(node -p 'require(\"./package.json\").version')\" && git push && npm run zip"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@tryghost/content-api": "^1.11.21",
    "beeper": "^2.1.0",
    "browser-sync": "^2.29.3",
    "cssnano": "^5.1.15",
    "cssnano-preset-advanced": "^5.3.10",
    "fitvids": "^2.1.1",
    "fslightbox": "^3.4.2",
    "gscan": "^4.46.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "lazysizes": "^5.3.2",
    "postcss": "^8.4.49",
    "postcss-cssential": "^1.1.0",
    "postcss-import": "^15.1.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.2.0",
    "postcss-preset-env": "^8.5.1",
    "pump": "^3.0.2",
    "tocbot": "^4.32.2"
  },
  "config": {
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "system",
          "light",
          "dark"
        ],
        "default": "system"
      },
      "font_family": {
        "type": "select",
        "options": [
          "System font",
          "Bitter",
          "Cinzel & Fauna One",
          "DM Serif Display & DM Sans",
          "Inter",
          "Libre Baskerville & Source Sans Pro",
          "Manrope & Bitter",
          "Outfit",
          "Playfair Display & Inter",
          "Poppins & Lora"
        ],
        "default": "Poppins & Lora",
        "description": "Set the font family (when the Ghost custom fonts are set to theme default)"
      },
      "use_portal_links": {
        "type": "boolean",
        "default": true
      },
      "sticky_header": {
        "type": "boolean",
        "default": false
      },
      "dark_theme_logo": {
        "type": "image"
      },
      "cta_headline": {
        "type": "text"
      },
      "cta_description": {
        "type": "text"
      },
      "hero_layout": {
        "type": "select",
        "options": [
          "1 featured post",
          "3 featured posts",
          "4 featured posts",
          "4 featured posts v2",
          "5 featured posts",
          "3 featured posts & latest news",
          "3 featured posts & latest news v2",
          "3 featured posts & latest news & editors picks"
        ],
        "default": "4 featured posts",
        "group": "homepage"
      },
      "topic_section_tag_slugs": {
        "type": "text",
        "group": "homepage"
      },
      "topic_section_layout": {
        "type": "select",
        "options": [
          "mixed",
          "4x1",
          "2x2",
          "1+3"
        ],
        "default": "mixed",
        "group": "homepage"
      },
      "show_post_card_excerpts": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "post_card_comment_count": {
        "type": "boolean",
        "default": false
      },
      "post_card_tags_limit": {
        "type": "select",
        "options": [
          "1",
          "2",
          "3",
          "all"
        ],
        "default": "1"
      },
      "featured_author_slugs": {
        "type": "text",
        "group": "homepage"
      },
      "default_post_template": {
        "type": "select",
        "options": [
          "With image on the side",
          "With full-width image",
          "With narrow image",
          "With sidebar",
          "With ToC",
          "With wide image"
        ],
        "default": "With image on the side",
        "group": "post"
      },
      "enable_drop_caps": {
        "type": "boolean",
        "default": false,
        "group": "post"
      }
    }
  }
}
