{{!-- Typography --}}
{{#match @custom.font_family "!=" "System font"}}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
{{/match}}

{{!-- System font --}}
{{#match @custom.font_family "System font"}}
  {{!-- It's the default settings, browser fonts are used --}}
  {{!-- -apple-system,BlinkMacSystemFont,"Segoe UI",Helvetica,Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji"; --}}
{{/match}}

{{!-- Bitter --}}
{{#match @custom.font_family "Bitter"}}
  <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Inter:wght@400;500;600;700&display=swap" 
        as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>    
  <style>
    body { --font-headings: var(--gh-font-heading, 'Bitter'), serif; --font-body: var(--gh-font-body, 'Inter'), sans; } 
    body .content, p { --font-body: var(--gh-font-body, 'Bitter'), serif; font-family: var(--font-body); }
    .notification-msg, .content button { font-family: 'Inter', sans; }
  </style>
{{/match}}

{{!-- Cinzel & Fauna One --}}
{{#match @custom.font_family "Cinzel & Fauna One"}}
  <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Cinzel:wght@600;700;800;900&family=Fauna+One&display=swap" 
        as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
  <style>body { --font-body: var(--gh-font-body, 'Fauna One'), serif; --font-headings: var(--gh-font-heading, 'Cinzel'), serif; }</style>
{{/match}}

{{!-- DM Serif Display & DM Sans --}}
{{#match @custom.font_family "DM Serif Display & DM Sans"}}
  <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=DM+Serif+Display:ital@0;1&display=swap" 
        as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>
  <style>body { --font-body: var(--gh-font-body, 'DM Sans'), sans-serif; --font-headings: var(--gh-font-heading, 'DM Serif Display'), serif; }</style>
{{/match}}

{{!-- Inter --}}
{{#match @custom.font_family "Inter"}}
  <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" 
        as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>    
  <style>body { --font-body: var(--gh-font-body, 'Inter'), sans-serif; --font-headings: var(--gh-font-heading, 'Inter'), sans-serif;}</style>
{{/match}}

{{!-- Manrope & Bitter --}}
{{#match @custom.font_family "Manrope & Bitter"}}
  <link rel="preload stylesheet" href="https://fonts.googleapis.com/css2?family=Bitter:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Manrope:wght@400;500;600;700;800&display=swap" 
        as="style" onload="this.onload=null;this.rel='stylesheet'" crossorigin>    
  <style>
    body { --font-headings: var(--gh-font-heading, 'Manrope'), sans-serif; } 
    body .content, p { --font-body: var(--gh-font-body, 'Bitter'), serif; font-family: var(--font-body); }
    body h1, body h2, body h3 { font-weight: var(--font-weight-extra-bold); }
  </style>
{{/match}}

