<aside class="sidebar">
  {{!-- Sidebar featured posts --}}
  {{#get "posts" filter="featured:true+id:-{{id}}" limit="3" include="authors,tags" as |featured|}}
    {{#if posts}}
    <h2 class="section-title xxs">{{t "Featured"}}</h2>
    <div class="sidebar__section">
      {{#foreach featured}}
        {{> post-card-simple}}
      {{/foreach}}
    </div>
    {{/if}}
  {{/get}}

  {{!-- Sidebar latest posts --}}
  {{#get "posts" filter="featured:false+id:-{{id}}" limit="3" include="authors,tags" as |latest|}}
    <h2 class="section-title xxs">{{t "Latest"}}</h2>
    <div class="sidebar__section">   
      {{#foreach latest}}
        {{> post-card-simple}}
      {{/foreach}}
    </div>
  {{/get}}

  {{!-- Subscribe--}}
  {{#if @site.members_enabled}}
    {{#unless @site.members_invite_only}}
      {{#unless @member}}
        <div class="sidebar__section is-sticky flex flex-cc">
          <div class="sidebar__subscribe">
            <h2 class="sidebar__subscribe-title text-acc fw-800">
              {{#if @custom.cta_headline}}{{{@custom.cta_headline}}}{{else}}{{@site.title}}{{/if}}
            </h2>
            <p class="sidebar__subscribe-description mb text-acc" id="sidebar-input-label">
              {{#if @custom.cta_description}}
                {{@custom.cta_description}}
              {{else}}
                {{@site.description}}
              {{/if}}
            </p>
            {{> subscribe-form 
              input_label="sidebar-input-label"
            }}
          </div>
        </div>
      {{/unless}}
    {{/unless}}
  {{/if}}
</aside>
