<article class="post-card{{#if feature_image}} has-img{{else}} no-image{{/if}}{{#if featured}} is-featured{{/if}}{{#if card_class}} {{card_class}}{{/if}} js-post-card">
  {{!-- Feature Image --}}
  {{#unless hide_image}}
    {{#if feature_image}}
      {{#link href=url class="post-card__media"}}
        <figure>
          {{> image
            image_type="post"
            image_class="lazyload"
            image_url=feature_image
            size_s=true
            size_m=true
            size_l=true
            sizes="280px"
          }}
        </figure>
      {{/link}}
    {{/if}}
  {{/unless}}

  {{!-- Content --}}
  <div class="post-card__content flex flex-col {{content_class}}">
    {{!-- Tag --}}
    <div class="flex post-card-tags">
      {{#foreach tags limit=@custom.post_card_tags_limit}}
        <a class="post-tag mr-sm tag-{{slug}}" href="{{url}}" aria-label="{{name}}"
          {{#if accent_color}} style="--color-accent: {{accent_color}}"{{/if}}
        >{{name}}</a>
        {{#unless @last}}
          <span class="tag-separator">/</span>
        {{/unless}}
      {{/foreach}}
    </div>

    {{!-- Title --}}
    {{#match heading "h1"}}
      <h1 class="post-card__title">{{#link href=url}}{{title}}{{/link}}</h1>
    {{else match heading "h2"}}
      <h2 class="post-card__title">{{#link href=url}}{{title}}{{/link}}</h2>
    {{else match heading "h3"}}
      <h3 class="post-card__title">{{#link href=url}}{{title}}{{/link}}</h3>
    {{else}}
      <h2 class="post-card__title">{{#link href=url}}{{title}}{{/link}}</h2>
    {{/match}}

    {{!-- Excerpt --}}
    <p class="post-card__excerpt opacity-080">
      {{excerpt words="20"}}
    </p>

    {{!-- Post author & date --}}
    {{> post-author-date}}
  </div>
</article>