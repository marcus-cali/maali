<aside class="sidebar">
  {{!-- Morning Briefing - Newsletter posts with tag 'nl' --}}
  {{#get "posts" filter="tag:nl+id:-{{id}}" limit="5" include="authors,tags" as |newsletters|}}
    {{#if newsletters}}
    <h2 class="section-title xxs">Test Briefing</h2>
    <style>
      .sidebar-morning-briefing .post-info__authors,
      .sidebar-morning-briefing .post-info__avatars, 
      .sidebar-morning-briefing .author-avatar,
      .sidebar-morning-briefing .post-info > a[href*="/author/"],
      .sidebar-morning-briefing .post-info > span,
      .sidebar-morning-briefing .post-info > a:first-child {
        display: none !important;
      }
      .sidebar-morning-briefing .post-info > time {
        display: inline !important;
      }
    </style>
    <div class="sidebar__section sidebar-morning-briefing">
      {{#foreach newsletters}}
        {{> post-card-simple hide_author="true"}}
      {{/foreach}}
    </div>
    {{/if}}
  {{/get}}

  {{!-- Subscribe--}}
  {{#if @site.members_enabled}}
    {{#unless @site.members_invite_only}}
      {{#unless @member}}
        <div class="sidebar__section is-sticky flex flex-cc">
          <div class="sidebar__subscribe">
            <h2 class="sidebar__subscribe-title text-acc fw-800">
              {{#if @custom.cta_headline}}{{{@custom.cta_headline}}}{{else}}{{@site.title}}{{/if}}
            </h2>
            <p class="sidebar__subscribe-description mb text-acc" id="sidebar-input-label">
              {{#if @custom.cta_description}}
                {{@custom.cta_description}}
              {{else}}
                {{@site.description}}
              {{/if}}
            </p>
            {{> subscribe-form 
              input_label="sidebar-input-label"
            }}
          </div>
        </div>
      {{/unless}}
    {{/unless}}
  {{/if}}
</aside>
